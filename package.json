{
	"name": "veramo-vscode",
	"displayName": "Veramo",
	"description": "Verifiable data management",
	"version": "0.0.5",
	"license": "Apache-2",
	"publisher": "veramo",
	"icon": "images/logo.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/veramolabs/veramo-vscode.git"
	},
	"engines": {
		"vscode": "^1.65.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:veramo.verify",
		"onCommand:veramo.verify-credential",
		"onCommand:veramo.resolve-did",
		"onCommand:veramo.enableCodeLens",
		"onCommand:veramo.disableCodeLens",
		"onCommand:veramo.enableRemoteInstance",
		"onCommand:veramo.disableRemoteInstance"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "veramo-explorer",
					"title": "Veramo Explorer",
					"icon": "media/logo.svg"
				}
			]
		},
		"views": {
			"veramo-explorer": [
				{
					"id": "veramoExplorer",
					"name": "Veramo explorer",
					"icon": "media/logo.svg",
					"contextualTitle": "Veramo Explorer"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "veramoExplorer",
				"contents": "No remote Veramo instances configured.\n[Add Remote Instance](command:nodeDependencies.addEntry)"
			}
		],
		"markdown.markdownItPlugins": true,
		"markdown.previewScripts": [
			"./dist/markdown-page.js"
		],
		"markdown.previewStyles": [
			"./style.css"
		],
		"commands": [
			{
				"command": "veramo.sign-credential",
				"title": "Sign credential",
				"category": "Veramo"
			},
			{
				"command": "veramo.verify-credential",
				"title": "Verify credential",
				"category": "Veramo"
			},
			{
				"command": "veramo.verify",
				"title": "Verify JWT",
				"category": "Veramo"
			},
			{
				"command": "veramo.resolve-did",
				"title": "Resolve DID",
				"category": "Veramo"
			},
			{
				"title": "Enable CodeLens",
				"command": "veramo.enableCodeLens",
				"category": "Veramo"
			},
			{
				"title": "Disable Codelens",
				"command": "veramo.disableCodeLens",
				"category": "Veramo"
			},
			{
				"title": "Enable Remote Instance",
				"command": "veramo.enableRemoteInstance",
				"category": "Veramo"
			},
			{
				"title": "Disable Remote Instance",
				"command": "veramo.disableRemoteInstance",
				"category": "Veramo"
			}
		],
		"configuration": {
			"properties": {
				"veramo.enableCodeLens": {
					"type": "boolean",
					"default": true
				},
				"veramo.enableRemoteInstance": {
					"type": "boolean",
					"default": false,
					"description": "Start your remote server by running `npx @veramo/cli server`"
				},
				"veramo.remoteAgentUrl": {
					"type": "string",
					"default": "http://localhost:3332/agent"
				},
				"veramo.remoteAgentApiKey": {
					"type": "string",
					"default": "test123"
				},
				"veramo.contextFolder": {
					"type": "string",
					"default": "context",
					"description": "Used for storing SignedFile credentials"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack",
		"compile-page:dev": "webpack --config ./webpack-page.config.js",
		"compile-page": "webpack --mode=production --config ./webpack-page.config.js",
		"watch": "webpack --watch",
		"watch-page": "webpack --watch --config ./webpack-page.config.js",
		"package": "webpack --mode production --devtool hidden-source-map && yarn compile-page",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"update:veramo": "yarn add @veramo/core @veramo/credential-w3c @veramo/did-jwt @veramo/did-resolver @veramo/message-handler did-jwt-vc did-resolver ethr-did-resolver web-did-resolver @veramo/remote-client"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@types/react-dom": "^18.0.8",
		"@types/vscode": "^1.65.0",
		"@typescript-eslint/eslint-plugin": "^5.12.1",
		"@typescript-eslint/parser": "^5.12.1",
		"@vscode/test-electron": "^2.1.2",
		"eslint": "^8.9.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.1",
		"ts-loader": "^9.2.6",
		"typescript": "^4.5.5",
		"webpack": "^5.69.1",
		"webpack-cli": "^4.9.2"
	},
	"dependencies": {
		"@types/blake2": "^4.0.1",
		"@types/markdown-it": "^12.2.3",
		"@veramo-community/react-components": "^1.1.2",
		"@veramo/core": "^4.2.0",
		"@veramo/credential-w3c": "^4.2.0",
		"@veramo/did-jwt": "^4.2.0",
		"@veramo/did-resolver": "^4.2.0",
		"@veramo/message-handler": "^4.2.0",
		"@veramo/remote-client": "^4.2.0",
		"blakejs": "^1.2.1",
		"cross-fetch": "^3.1.5",
		"date-fns": "^2.28.0",
		"did-jwt-vc": "^3.1.0",
		"did-resolver": "^4.0.1",
		"ethr-did-resolver": "^8.0.0",
		"gray-matter": "^4.0.3",
		"html-entities": "^2.3.3",
		"json-pretty-html": "^1.1.6",
		"jwt-decode": "^3.1.2",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-server": "^0.8.1",
		"web-did-resolver": "^2.0.21",
		"yaml": "^2.2.1"
	}
}
